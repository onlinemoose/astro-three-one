---
import Layout from '../layouts/Layout.astro';
import { db } from 'astro:db';
import { Link } from 'astro:db';
import LinkCard from "../components/LinkCard.astro";
const links = await db.select().from(Link)

---

<Layout title="Welcome to Astro.">
	<main>
		<div class="grid gap-6">
			{links.map((link) => <LinkCard link={link} />)}
		</div>

		<div class="container mx-auto px-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
			<div class="bg-blue-500 text-white p-4">Content 1</div>
			<div class="bg-blue-500 text-white p-4">Content 2</div>
			<div class="bg-blue-500 text-white p-4">Content 3</div>
		</div>

	</main>
</Layout>


